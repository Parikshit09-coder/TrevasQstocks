pipeline {
  agent {
    docker {
      image 'parikshitdesai388/react-docker-agent:latest'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  stages {
    
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'cd Stock && npm ci'
      }
    }

    stage('Build React App') {
      steps {
        sh 'cd Stock && npm run build'
      }
    }

    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://184.72.86.164:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_TOKEN')]) {
          script {
            // Create sonar-project.properties file
            sh '''
              cd Stock
              cat > sonar-project.properties << EOF
              sonar.projectKey=react-frontend
              sonar.projectName=React Frontend
              sonar.projectVersion=1.0
              sonar.sources=src
              sonar.host.url=${SONAR_URL}
              sonar.login=${SONAR_TOKEN}
              sonar.sourceEncoding=UTF-8
              sonar.exclusions=node_modules/**,dist/**,build/**,coverage/**,*.config.js,*.setup.js
              sonar.javascript.file.suffixes=.js,.jsx,.ts,.tsx
              sonar.tests=src
              sonar.test.inclusions=**/*.test.js,**/*.test.jsx,**/*.test.ts,**/*.test.tsx
              sonar.testExecutionReportPaths=coverage/test-report.xml
              sonar.coverage.exclusions=node_modules/**,dist/**,build/**,coverage/**
              EOF
            '''
            
            // Run SonarScanner using Docker container with Java
            sh '''
              docker run --rm \
                -v $(pwd)/Stock:/usr/src \
                -w /usr/src \
                -e SONAR_HOST_URL="${SONAR_URL}" \
                -e SONAR_TOKEN="${SONAR_TOKEN}" \
                sonarsource/sonar-scanner-cli:latest \
                -Dsonar.projectKey=react-frontend \
                -Dsonar.sources=src \
                -Dsonar.host.url=${SONAR_URL} \
                -Dsonar.login=${SONAR_TOKEN}
            '''
          }
        }
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "parikshitdesai388/cicd:${BUILD_NUMBER}"
      }
      steps {
        script {
          sh 'cd Stock && docker build -t ${DOCKER_IMAGE} .'
          docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
            docker.image("${DOCKER_IMAGE}").push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      environment {
        GIT_REPO_NAME = "react-gitops-manifests"
        GIT_USER_NAME = "Parikshit09-coder"
      }
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            # Clone the manifests repo
            git clone https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git
            cd ${GIT_REPO_NAME}
            
            git config user.email "gurudesai2005@gmail.com"
            git config user.name "Parikshit09-coder"

            # Update the image tag in deployment.yaml
            sed -i "s|image: .*|image: parikshitdesai388/cicd:${BUILD_NUMBER}|" deployment.yaml
            
            # Commit and push changes
            git add deployment.yaml
            git commit -m "Update image to build ${BUILD_NUMBER}"
            git push origin main
          '''
        }
      }
    }
  }
}
